<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Cart</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100">
    <!-- Navbar -->
    <nav class="text-black p-4 flex justify-between items-center">
      <h1 class="text-xl font-bold">Scatch</h1>
      <div class="space-x-4">
        <a href="/shop" class="hover:underline">Shop</a>
        <a href="/cart" class="hover:underline">Cart</a>
        <a href="/logout" class="hover:underline">Logout</a>
      </div>
    </nav>

    <!-- Cart Section -->
    <div class="max-w-5xl mx-auto p-6">
      <h2 class="text-2xl font-bold mb-6">Your Cart</h2>

      <% if (products && products.length > 0) { %>
        <% products.forEach(function(product) { %>
          <div class="flex items-center bg-white p-4 rounded-lg shadow-md mb-4">
            <!-- Product Image -->
            <img
              src="data:image/png;base64,<%= product.image.toString('base64') %>"
              alt="<%= product.name %>"
              class="w-20 h-20 object-cover rounded-md"
            />

            <!-- Product Info -->
            <div class="ml-4 flex-1">
              <h3 class="font-semibold text-lg"><%= product.name %></h3>
              <p class="text-gray-600">â‚¹<%= product.price %></p>
            </div>

            <!-- Actions -->
            <div class="flex items-center space-x-3">
              <form action="/users/cart/remove/<%= product._id %>" method="POST" enctype="multipart/form-data">
                <button
                  type="submit"
                  class="bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600"
                >
                  Remove
                </button>
              </form>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p class="text-gray-600">Your cart is empty.</p>
      <% } %>

      <!-- Checkout -->
      <div class="mt-8 text-right">
        <a
          href="/checkout"
          class="bg-green-600 text-white px-6 py-2 rounded-lg font-semibold hover:bg-green-700"
        >
          Proceed to Checkout
        </a>
      </div>
    </div>
  </body>
</html>
