<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create New Product</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 min-h-screen flex">
    <!-- Sidebar -->
    <aside class="w-1/5 bg-white shadow-md p-6">
      <h2 class="text-lg font-bold mb-6">Scatch</h2>
      <nav class="flex flex-col space-y-4">
        <a href="#" class="text-gray-700 hover:text-blue-600">All Products</a>
        <a href="#" class="text-gray-700 hover:text-blue-600"
          >Create new product</a
        >
      </nav>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 p-10">
      <% if (success && success.length > 0) { %>
      <div
        id="successAlert"
        class="w-full max-w-md bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative"
        role="alert"
      >
        <strong class="font-bold">Success!</strong>
        <span class="block sm:inline"><%= success %></span>
        <span
          class="absolute top-0 bottom-0 right-0 px-4 py-3 cursor-pointer"
          onclick="closeAlert('successAlert')"
        >
          âœ–
        </span>
      </div>
      <% } %>

      <div class="bg-white rounded-lg shadow-md p-8 max-w-2xl mx-auto">
        <h2 class="text-2xl font-bold mb-6">Create New Product</h2>

        <!-- Form -->
        <form
          action="/products/create"
          method="POST"
          enctype="multipart/form-data"
          class="space-y-6"
        >
          <!-- Product Details -->
          <div>
            <h3 class="text-lg font-semibold mb-4">Product Details</h3>

            <label class="block mb-2 font-medium text-gray-700"
              >Product Image</label
            >
            <input
              type="file"
              name="image"
              class="mb-4 w-full text-sm text-gray-700"
            />

            <div class="grid grid-cols-2 gap-4">
              <input
                type="text"
                name="name"
                placeholder="Product Name"
                class="border p-2 rounded w-full focus:ring focus:ring-blue-300"
              />
              <input
                type="number"
                name="price"
                placeholder="Product Price"
                class="border p-2 rounded w-full focus:ring focus:ring-blue-300"
              />
            </div>

            <input
              type="number"
              name="discount"
              placeholder="Discount Price"
              class="mt-4 border p-2 rounded w-full focus:ring focus:ring-blue-300"
            />
          </div>

          <!-- Panel Details -->
          <div>
            <h3 class="text-lg font-semibold mb-4">Panel Details</h3>

            <div class="grid grid-cols-2 gap-4">
              <input
                type="text"
                name="bgcolor"
                placeholder="Background Color"
                class="border p-2 rounded w-full focus:ring focus:ring-blue-300"
              />
              <input
                type="text"
                name="panelcolor"
                placeholder="Panel Color"
                class="border p-2 rounded w-full focus:ring focus:ring-blue-300"
              />
            </div>

            <input
              type="text"
              name="textcolor"
              placeholder="Text Color"
              class="mt-4 border p-2 rounded w-full focus:ring focus:ring-blue-300"
            />
          </div>

          <!-- Submit -->
          <button
            type="submit"
            class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700"
          >
            Create New Product
          </button>
        </form>
      </div>
    </main>
  </body>
</html>
