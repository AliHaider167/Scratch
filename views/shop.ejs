<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Shop</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100">
    <div class="flex min-h-screen">
      <!-- ✅ Sidebar -->
      <aside class="w-1/5 bg-white p-6 shadow-md">
        <h1 class="text-lg font-bold mb-6">Scatch</h1>

        <!-- Sort Dropdown -->
        <div class="mb-6">
          <label class="block text-sm font-medium text-gray-700 mb-2"
            >Sort by</label
          >
          <select class="w-full border-gray-300 rounded p-2 text-sm">
            <option>Popular</option>
            <option>Newest</option>
            <option>Price: Low to High</option>
            <option>Price: High to Low</option>
          </select>
        </div>

        <!-- Categories -->
        <nav class="mb-6">
          <h2 class="text-sm font-semibold text-gray-700 mb-2">Collection</h2>
          <ul class="space-y-2 text-gray-700">
            <li><a href="#" class="hover:text-blue-600">New Collection</a></li>
            <li><a href="#" class="hover:text-blue-600">All Products</a></li>
            <li>
              <a href="#" class="hover:text-blue-600">Discounted Products</a>
            </li>
          </ul>
        </nav>

        <!-- Filters -->
        <div>
          <h2 class="text-sm font-semibold text-gray-700 mb-2">Filter by</h2>
          <ul class="space-y-2 text-gray-700">
            <li><a href="#" class="hover:text-blue-600">Availability</a></li>
            <li><a href="#" class="hover:text-blue-600">Discount</a></li>
          </ul>
        </div>
      </aside>

      <!-- ✅ Main Product Grid -->
      <main class="flex-1 p-8">
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
          <!-- Example Product Card -->

          <%if (products.length >0) {%> <%products.forEach(function(product){%>

          <div
            class="bg-[<%= product.bgcolor%>] rounded-t-lg shadow-md relative flex flex-col"
          >
            <div class="flex-1">
              <img
                src="data:image/png;base64,<%= product.image.toString('base64') %>"
                alt="<%= product.name %>"
                class="w-full h-full rounded-t-md object-cover"
              />
            </div>
            <!-- Image area -->
            <div
              class="bg-[<%= product.panelcolor%>] p-3 flex justify-between items-center text-[<%=product.textcolor%>] text-sm"
            >
              <div>
                <h3 class="font-semibold text-sm"><%= product.name %></h3>
                <p class="text-xs">₹<%= product.price %></p>
              </div>
              <button
                class="bg-white text-black rounded-full w-6 h-6 flex items-center justify-center"
              >
                +
              </button>
            </div>
          </div>
          <%})%> <%} else { %>
          <h1 class="text-3xl font-bold text-gray-800">
            No Products Available
          </h1>
          <% } %>
        </div>
      </main>
    </div>
  </body>
</html>
